{
	"name": "turbokit",
	"version": "1.0.0",
	"description": "A modern, real-time application template powered by Convex",
	"type": "module",
	"private": true,
	"scripts": {
		"build": "turbo build",
		"dev": "turbo run dev --filter=!@repo/backend",
		"dev:all": "turbo run dev",
		"dev:docs": "turbo run dev --filter=@repo/docs",
		"dev:backend": "pnpm -C packages/backend dev",
		"docs:dev": "pnpm -C docs dev",
		"docs:build": "pnpm -C docs build",
		"lint": "ultracite check",
		"format": "ultracite fix",
		"doctor": "ultracite doctor",
		"typecheck": "turbo typecheck --only --filter=app --filter=docs",
		"test": "vitest run --config apps/app/vitest.config.ts --passWithNoTests && turbo test",
		"test:e2e": "turbo test:e2e",
		"analyze": "turbo analyze",
		"boundaries": "turbo boundaries",
		"bump-deps": "npx npm-check-updates --deep -u -x react-day-picker && pnpm install",
		"bump-ui": "npx shadcn@latest add --all --overwrite -c packages/design",
		"clean": "git clean -xdf node_modules"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.13",
		"@lnittman/typescript-config": "^0.1.0",
		"@types/node": "22.15.3",
		"@vitest/coverage-v8": "^4.0.18",
		"turbo": "^2.5.6",
		"typescript": "^5.9.2",
		"ultracite": "^7.1.3",
		"vitest": "^4.0.18"
	},
	"packageManager": "pnpm@10.28.2",
	"engines": {
		"node": ">=22 <23",
		"pnpm": ">=10.28.2"
	}
}
