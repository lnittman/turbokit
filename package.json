{
  "name": "turbokit",
  "version": "1.0.0",
  "description": "ACP-native development platform for Convex applications",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo run dev --filter=!@repo/backend",
    "dev:all": "turbo run dev",
    "dev:backend": "pnpm -C packages/backend dev",
    "lint": "ultracite lint",
    "format": "ultracite format",
    "test": "turbo test",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "pnpm test:unit && pnpm test:e2e",
    "analyze": "turbo analyze",
    "boundaries": "turbo boundaries",
    "bump-deps": "npx npm-check-updates --deep -u -x react-day-picker && pnpm install",
    "bump-ui": "npx shadcn@latest add --all --overwrite -c packages/design",
    "clean": "git clean -xdf node_modules"
  },
  "dependencies": {},
  "devDependencies": {
    "@auto-it/first-time-contributor": "^11.3.0",
    "@biomejs/biome": "1.9.4",
    "@repo/typescript-config": "workspace:*",
    "@turbo/gen": "^2.5.2",
    "@types/node": "^20.0.0",
    "@types/uuid": "^10.0.0",
    "picocolors": "^1.1.1",
    "turbo": "^2.5.2",
    "typescript": "^5.7.2",
    "ultracite": "^4.2.1"
  },
  "packageManager": "pnpm@10.10.0",
  "engines": {
    "node": ">=20"
  }
}
