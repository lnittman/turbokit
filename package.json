{
  "name": "turbokit",
  "version": "1.0.0",
  "description": "A modern, real-time application template powered by Convex",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo run dev --filter=!@repo/backend",
    "dev:all": "turbo run dev",
    "dev:docs": "turbo run dev --filter=@repo/docs",
    "dev:backend": "pnpm -C packages/backend dev",
    "docs:dev": "pnpm -C docs dev",
    "docs:build": "pnpm -C docs build",
    "lint": "ultracite lint",
    "format": "ultracite format",
    "test": "turbo test",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "pnpm test:unit && pnpm test:e2e",
    "analyze": "turbo analyze",
    "boundaries": "turbo boundaries",
    "bump-deps": "npx npm-check-updates --deep -u -x react-day-picker && pnpm install",
    "bump-ui": "npx shadcn@latest add --all --overwrite -c packages/design",
    "clean": "git clean -xdf node_modules"
  },
  "dependencies": {},
  "devDependencies": {
    "@auto-it/first-time-contributor": "^11.3.0",
    "@biomejs/biome": "2.2.3",
    "@repo/typescript-config": "workspace:*",
    "@turbo/gen": "^2.5.6",
    "@types/node": "^24.3.1",
    "@types/uuid": "^10.0.0",
    "picocolors": "^1.1.1",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2",
    "ultracite": "^5.3.4"
  },
  "packageManager": "pnpm@10.15.1",
  "engines": {
    "node": ">=20"
  }
}
