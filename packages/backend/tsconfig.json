{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": false,
    "noEmit": true,
    "types": ["@types/node"]
  },
  "include": ["convex/**/*.ts"],
  "exclude": [
    "node_modules",
    "convex/_generated",
    
  ]
}
