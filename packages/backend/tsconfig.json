{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021"],
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true,
    "types": ["@types/node"]
  },
  "include": ["convex/**/*.ts"],
  "exclude": ["node_modules", "convex/_generated"]
}