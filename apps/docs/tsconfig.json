{
	"extends": "@lnittman/typescript-config/nextjs.json",
	"compilerOptions": {
		"baseUrl": ".",
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./*"],
			"contentlayer/generated": ["./.contentlayer/generated"],
			"@repo/*": ["../../packages/*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		".contentlayer/generated"
	],
	"exclude": ["node_modules", ".source/**"]
}
